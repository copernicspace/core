{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "max-line-length": ["error", 80],
    "compiler-version": ["error", "^0.8.0"],
    "prettier/prettier": "error",
    "func-visibility": ["error", {"ignoreConstructors": true}],
    "quotes": ["error", "single"]
  }
}
