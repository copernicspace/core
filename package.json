{
  "name": "copernicspace-core",
  "version": "0.0.1",
  "description": "contracts and ts lib for copernic space",
  "private": true,
  "scripts": {
    "test": "hardhat compile && hardhat test",
    "lint:ts": "eslint \"./**/*{.ts,.tsx}\"",
    "lint:sol": "solhint -f table contracts/**/*.sol",
    "fix:ts": "eslint \"./**/*{.ts,.tsx}\" --fix",
    "fix:sol": "prettier --write 'contracts/**/*.sol'",
    "lint": "eslint \"./**/*{.ts,.tsx}\" && solhint contracts/**/*.sol"
  },
  "engines": {
    "node": ">=v15.14.0",
    "yarn": ">=v1.22.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.3.4",
    "eslint": "^7.28.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4"
  }
}
